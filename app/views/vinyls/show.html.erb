<div class="show-top">

  <div class="show-cover">
    <% if @vinyl.image.attached? %>
      <%= image_tag @vinyl.image.variant(resize: "500x500"), class: "img-fluid shadow rounded" %>
    <% end %>
  </div>

  <div class="show-info">
    Posted by : <%= @vinyl.user.name %>

    <h1><%= @vinyl.album_title %></h1>
    <p>
      <%= @vinyl.artist %>
    </p>
    <p>
      <%= @vinyl.description %>
    </p>
  </div>

</div>

<div class="show-comments">
  <h2>Comments</h2>
  <%= render @vinyl.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>

<% if @vinyl.user == current_user %>
  <td><%= link_to 'Delete', vinyl_path(@vinyl),
                method: :delete,
                data: {confirm: 'Are you sure?'} %></td> |
  <%= link_to 'Edit', edit_vinyl_path(@vinyl) %> |
<% end %>

<%= link_to 'Back', vinyls_path %>