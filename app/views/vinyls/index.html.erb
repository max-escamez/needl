<div class="index">
  <div class="filter">
    <% if @sort=="vote" %>
      Sorted by votes
    <% else %>
      Sorted by dates
    <% end %>
    <div class="dropdown btn-group-filters">
      <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <i class="material-icons">filter_list</i>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
        <%= link_to 'Filter by dates', vinyls_index_path, class:'btn-date-filter dropdown-item'%>
        <%= link_to 'Filter by votes', vinyls_index_path(filter: "vote"), class:'btn-date-filter dropdown-item'%>
      </ul>
    </div>
  </div>
  <%= render '/vinyls/grid' %>
</div>

<%= link_to new_vinyl_path do %>
  <div class="btn-floating">
    <i class="material-icons">add</i>
  </div>
<% end %>