<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<%= form_with model: @vinyl, local: true do |form| %>

  <% if @vinyl.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@vinyl.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @vinyl.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">

    <div class="form-fill" >
      <p>
        <%= form.label :album_title %><br>
        <%= form.text_field :album_title, required: true ,class:"form-control" %>
      </p>

      <p>
        <%= form.label :artist %><br>
        <%= form.text_field :artist, required: true ,class:"form-control"%>
      </p>

      <p>
        <%= form.label :description %><br>
        <%= form.text_area :description , class:"form-control"%>
      </p>

      <p>
        <%= form.label :image, 'Cover' %><br>
        <%= form.file_field :image, direct_upload: true, accept: 'image/png,image/gif,image/jpeg', required: true, id:"form-cover" %>
      </p>

      <% if @vinyl.image.attached? %>
        <%= image_tag @vinyl.image%>
      <% end %>
    </div>

    <div class="form-preview rounded" id="form-preview">
    </div>

  </div>

  <div  class="center" >
    <%= form.submit "Submit", class:"btn-lg submit-btn" %>
  </div>

<% end %>